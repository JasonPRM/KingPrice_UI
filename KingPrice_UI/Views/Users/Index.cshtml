@model IEnumerable<KingPrice_UI.Models.Users>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Add User", "AddUserView", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateUpdated)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateUpdated)
        </td>
        <td>
            @using (Html.BeginForm("DeleteUser", "Users", new { ID = item.ID }, FormMethod.Post))
            {
                <input type="submit" class="btn btn-danger" value="Delete" />
            }
        </td>
        <td>
            @using (Html.BeginForm("EditUserView", "Users", new { ID = item.ID }, FormMethod.Post))
            {
                <input type="submit" class="btn btn-secondary" value="Edit" />
            }
        </td>
    </tr>
 }
</table>
